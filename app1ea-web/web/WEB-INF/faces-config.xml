<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
    <!--
        Managed Beans.
    -->
    <managed-bean>
        <display-name>A Person (e.g. a user or customer)</display-name>
        <managed-bean-name>personBean</managed-bean-name>
        <managed-bean-class>eu.artofcoding.app1.web.user.PersonBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <application>
        <!--
            Multilanguage.
        -->
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de</supported-locale>
        </locale-config>
        <!-- Resource bundle for messages at login page -->
        <resource-bundle>
            <base-name>eu.artofcoding.app1.web.login</base-name>
            <var>loginmsgs</var>
        </resource-bundle>
    </application>
</faces-config>
